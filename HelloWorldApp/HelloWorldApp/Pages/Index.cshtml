@page
@model IndexModel
@{
    ViewData["Title"] = "ASP.NET Core Introduction";
}

<div class="container text-center mt-5">
    <h1 class="display-4 mb-5">Welcome to ASP.NET Core Exploration!</h1>

    <div class="row justify-content-center">
        <!-- ASP.NET Core Intro Card -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <i class="fas fa-code fa-3x mb-3"></i>
                    <h2 class="card-title">ASP.NET Core</h2>
                    <p class="card-text">An open-source, cross-platform framework by Microsoft for building modern, cloud-based, internet-connected applications.</p>
                    <a href="https://docs.microsoft.com/aspnet/core" target="_blank" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>

        <!-- GitHub Journey Card -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <i class="fab fa-github fa-3x mb-3"></i>
                    <h2 class="card-title">My GitHub Journey</h2>
                    <p class="card-text">Follow my learning journey and explore the projects I've been working on.</p>
                    <a href="https://github.com/sirin-koca/ASP.NET-Core" target="_blank" class="btn btn-secondary">Visit Repo</a>
                </div>
            </div>
        </div>
    </div>
</div>
